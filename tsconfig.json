
{
  "include": ["src/**/*"],
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "allowJs": true,
    "target": "esnext",
    "moduleResolution": "nodeNext",
    "experimentalDecorators": true,
    "importHelpers": true,
    "strict": true,
    "noImplicitAny": true,
    "useDefineForClassFields": false,
    "sourceMap": true,
    "inlineSources": true
  }
}
